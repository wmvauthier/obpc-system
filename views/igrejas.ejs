        <!-- Modal para Inserção de Igrejas -->
        <div class="modal fade" id="registerChurchModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Insira as Informações da Nova Igreja</h4>
                    </div>
                    <div class="modal-body">
                        <form id="registerUserForm">
                            <div class="form-group">
                                <label for="nome" class="col-form-label">Nome</label>
                                <input id="nome" type="text" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="endereco" class="col-form-label">Endereço</label>
                                <input id="endereco" type="text" class="form-control" required>
                            </div>
                            <div class="row">
                                <div class="col-4 form-group">
                                    <label for="endereco_numero" class="col-form-label">Número</label>
                                    <input id="endereco_numero" type="number" min="0" class="form-control">
                                </div>
                                <div class="col-4 form-group">
                                    <label for="endereco_complemento" class="col-form-label">Complemento</label>
                                    <input id="endereco_complemento" type="text" class="form-control">
                                </div>
                                <div class="col-4 form-group">
                                    <label for="endereco_pais" class="col-form-label">País</label>
                                    <select id="endereco_pais" class="form-control selectCountry" required>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 col-md-3 form-group">
                                    <label for="endereco_estado" class="col-form-label">Estado</label>
                                    <select id="endereco_estado" class="form-control selectState" required>
                                    </select>
                                </div>
                                <div class="col-sm-6 col-md-3 form-group">
                                    <label for="endereco_cidade" class="col-form-label">Cidade</label>
                                    <input id="endereco_cidade" class="form-control" required>
                                </div>
                                <div class="col-sm-6 col-md-3 form-group">
                                    <label for="endereco_bairro" class="col-form-label">Bairro</label>
                                    <input id="endereco_bairro" type="text" class="form-control" required>
                                </div>
                                <div class="col-sm-6 col-md-3 form-group">
                                    <label for="endereco_telefone" class="col-form-label">Contato</label>
                                    <input id="endereco_telefone" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="pastor" class="col-form-label">Pastor</label>
                                <select id="pastor" class="form-control selectPastor" required>
                                </select>
                            </div>
                            <div class="row">
                                <div class="col-6 form-group">
                                    <label for="regiao" class="col-form-label">Região</label>
                                    <select id="regiao" class="form-control selectRegiao" required></select>
                                </div>
                                <div class="col-6 form-group">
                                    <label for="classificacao" class="col-form-label">Classificação</label>
                                    <select id="classificacao" class="form-control selectClassification" required>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="sede" class="col-form-label">Sede</label>
                                <select id="sede" class="form-control selectSede">
                                </select>
                            </div>
                            <div class="row">
                                <div class="col-4 form-group">
                                    <label for="rede_social_instagram" class="col-form-label">Instagram</label>
                                    <input id="rede_social_instagram" type="text" class="form-control">
                                </div>
                                <div class="col-4 form-group">
                                    <label for="rede_social_facebook" class="col-form-label">Facebook</label>
                                    <input id="rede_social_facebook" type="text" class="form-control">
                                </div>
                                <div class="col-4 form-group">
                                    <label for="rede_social_youtube" class="col-form-label">Youtube</label>
                                    <input id="rede_social_youtube" type="text" class="form-control">
                                </div>
                            </div>
                        </form>
                    </div>
